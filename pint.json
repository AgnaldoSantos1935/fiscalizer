{
  "$schema": "https://raw.githubusercontent.com/laravel/pint/main/resources/schema.json",
  "preset": "laravel",
  "rules": {
    "binary_operator_spaces": {"default": "single_space"},
    "concat_space": {"spacing": "one"},
    "no_unused_imports": true,
    "ordered_imports": {"sort_algorithm": "alpha"}
  },
  "exclude": [
    "vendor",
    "storage",
    "bootstrap/cache",
    "public"
  ]
}